{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header d-flex align-items-center">
        <h3 class="card-header-title mb-0">
          <i class="material-icons">description</i>
          Logs de Importaci√≥n
        </h3>
        <div class="ml-auto d-flex gap-2">
          <a href="{{ path('admin_sync_ps_to_ps_importer_panel') }}" class="btn btn-outline-secondary">
            <i class="material-icons">arrow_back</i> Volver al Panel
          </a>
          {% if logs is not empty %}
          <button id="clearLogs" class="btn btn-danger">
            <i class="material-icons">delete</i> Limpiar Todos los Logs
          </button>
          {% endif %}
        </div>
      </div>
      <div class="card-body">
        
        {# Info sobre limpieza autom√°tica #}
        <div class="alert alert-info" role="alert">
          <i class="material-icons">info</i>
          <strong>Limpieza Autom√°tica:</strong> Los logs se eliminan autom√°ticamente despu√©s de <strong>24 horas</strong>.
        </div>

        {% if logs is empty %}
          <div class="text-center py-5">
            <i class="material-icons" style="font-size: 64px; color: #ccc;">description</i>
            <p class="text-muted mt-3">No hay logs disponibles</p>
            <p class="text-muted">Los logs se generan al importar productos</p>
          </div>
        {% else %}
          
          <div class="row">
            {# Lista de archivos de log #}
            <div class="col-md-3">
              <div class="card">
                <div class="card-header">
                  <h5 class="mb-0">
                    <i class="material-icons">folder</i>
                    Archivos de Log
                  </h5>
                </div>
                <div class="list-group list-group-flush" style="max-height: 500px; overflow-y: auto;">
                  {% for log in logs %}
                  <a href="?file={{ log.name }}&token={{ adminToken }}" 
                     class="list-group-item list-group-item-action {% if log.name == selectedLog %}active{% endif %}">
                    <div class="d-flex w-100 justify-content-between">
                      <h6 class="mb-1">
                        <i class="material-icons" style="font-size: 16px; vertical-align: middle;">insert_drive_file</i>
                        {{ log.name }}
                      </h6>
                    </div>
                    <small>
                      {{ log.date }}<br>
                      {{ (log.size / 1024)|round(2) }} KB
                    </small>
                  </a>
                  {% endfor %}
                </div>
              </div>
            </div>

            {# Contenido del log seleccionado #}
            <div class="col-md-9">
              <div class="card">
                <div class="card-header d-flex align-items-center">
                  <h5 class="mb-0">
                    <i class="material-icons">visibility</i>
                    {{ selectedLog|default('Ninguno seleccionado') }}
                  </h5>
                  {% if selectedLog %}
                  <div class="ml-auto d-flex gap-2">
                    <button id="copyLog" class="btn btn-sm btn-outline-primary">
                      <i class="material-icons">content_copy</i> Copiar
                    </button>
                    <button id="downloadLog" class="btn btn-sm btn-outline-success">
                      <i class="material-icons">download</i> Descargar
                    </button>
                  </div>
                  {% endif %}
                </div>
                <div class="card-body p-0">
                  {% if logContent %}
                  <pre id="logContent" class="log-viewer">{{ logContent }}</pre>
                  {% else %}
                  <div class="text-center py-5 text-muted">
                    <i class="material-icons" style="font-size: 48px;">description</i>
                    <p class="mt-3">Selecciona un archivo de log para ver su contenido</p>
                  </div>
                  {% endif %}
                </div>
              </div>
              
              {# Estad√≠sticas del log #}
              {% if logContent %}
              <div class="card mt-3">
                <div class="card-body">
                  <div class="row text-center">
                    <div class="col-md-3">
                      <div class="stat-box">
                        <i class="material-icons">subject</i>
                        <h4 id="lineCount">-</h4>
                        <p class="text-muted">L√≠neas</p>
                      </div>
                    </div>
                    <div class="col-md-3">
                      <div class="stat-box">
                        <i class="material-icons">check_circle</i>
                        <h4 id="successCount" class="text-success">-</h4>
                        <p class="text-muted">√âxitos</p>
                      </div>
                    </div>
                    <div class="col-md-3">
                      <div class="stat-box">
                        <i class="material-icons">error</i>
                        <h4 id="errorCount" class="text-danger">-</h4>
                        <p class="text-muted">Errores</p>
                      </div>
                    </div>
                    <div class="col-md-3">
                      <div class="stat-box">
                        <i class="material-icons">warning</i>
                        <h4 id="warningCount" class="text-warning">-</h4>
                        <p class="text-muted">Advertencias</p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              {% endif %}
              
            </div>
          </div>
        {% endif %}
        
      </div>
    </div>
  </div>
</div>

<style>
.log-viewer {
  margin: 0;
  padding: 20px;
  background-color: #1e1e1e;
  color: #d4d4d4;
  font-family: 'Courier New', Courier, monospace;
  font-size: 13px;
  line-height: 1.5;
  height: 600px;
  overflow-y: auto;
  overflow-x: auto;
  white-space: pre-wrap;
  word-wrap: break-word;
}

.log-viewer::-webkit-scrollbar {
  width: 10px;
  height: 10px;
}

.log-viewer::-webkit-scrollbar-track {
  background: #2d2d2d;
}

.log-viewer::-webkit-scrollbar-thumb {
  background: #555;
  border-radius: 5px;
}

.log-viewer::-webkit-scrollbar-thumb:hover {
  background: #666;
}

.stat-box {
  padding: 15px;
}

.stat-box i {
  font-size: 32px;
  opacity: 0.7;
}

.stat-box h4 {
  font-size: 28px;
  font-weight: bold;
  margin: 10px 0 5px 0;
}

.list-group-item.active {
  background-color: #25b9d7;
  border-color: #25b9d7;
}

.ml-auto {
  margin-left: auto;
}

.gap-2 {
  gap: 0.5rem;
}
</style>

<script>
(function() {
  'use strict';
  
  console.log('üîÑ Iniciando visor de logs...');
  
  // Esperar a que el DOM est√© listo
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initLogs);
  } else {
    initLogs();
  }
  
  function initLogs() {
    console.log('‚úÖ DOM listo, inicializando logs...');
    
    const clearLogsBtn = document.getElementById('clearLogs');
    const copyLogBtn = document.getElementById('copyLog');
    const downloadLogBtn = document.getElementById('downloadLog');
    const logContent = document.getElementById('logContent');
    
    // Calcular estad√≠sticas
    if (logContent) {
      calculateStats(logContent.textContent);
    }
    
    // Bot√≥n limpiar logs
    if (clearLogsBtn) {
      clearLogsBtn.addEventListener('click', function(e) {
        e.preventDefault();
        
        if (!confirm('¬øEst√°s seguro de que quieres eliminar TODOS los logs?')) {
          return;
        }
        
        const clearUrl = '{{ path('admin_sync_ps_to_ps_importer_clear_logs') }}';
        
        fetch(clearUrl, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest'
          }
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            alert('‚úì ' + data.message);
            window.location.reload();
          } else {
            alert('‚úó ' + data.message);
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('‚úó Error al limpiar logs: ' + error.message);
        });
      });
    }
    
    // Bot√≥n copiar
    if (copyLogBtn && logContent) {
      copyLogBtn.addEventListener('click', function() {
        const text = logContent.textContent;
        
        if (navigator.clipboard && navigator.clipboard.writeText) {
          navigator.clipboard.writeText(text).then(function() {
            alert('‚úì Log copiado al portapapeles');
          }).catch(function(err) {
            console.error('Error al copiar:', err);
            fallbackCopy(text);
          });
        } else {
          fallbackCopy(text);
        }
      });
    }
    
    // Bot√≥n descargar
    if (downloadLogBtn && logContent) {
      downloadLogBtn.addEventListener('click', function() {
        const text = logContent.textContent;
        const filename = '{{ selectedLog|default("log.txt") }}';
        
        const blob = new Blob([text], { type: 'text/plain' });
        const url = window.URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = filename;
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        window.URL.revokeObjectURL(url);
      });
    }
  }
  
  function calculateStats(logText) {
    const lines = logText.split('\n').length;
    const successes = (logText.match(/‚úì|‚úÖ|success/gi) || []).length;
    const errors = (logText.match(/‚úó|ERROR|FATAL|Exception/gi) || []).length;
    const warnings = (logText.match(/‚ö†|WARNING|advertencia/gi) || []).length;
    
    const lineCountEl = document.getElementById('lineCount');
    const successCountEl = document.getElementById('successCount');
    const errorCountEl = document.getElementById('errorCount');
    const warningCountEl = document.getElementById('warningCount');
    
    if (lineCountEl) lineCountEl.textContent = lines.toLocaleString();
    if (successCountEl) successCountEl.textContent = successes;
    if (errorCountEl) errorCountEl.textContent = errors;
    if (warningCountEl) warningCountEl.textContent = warnings;
  }
  
  function fallbackCopy(text) {
    const textarea = document.createElement('textarea');
    textarea.value = text;
    textarea.style.position = 'fixed';
    textarea.style.opacity = '0';
    document.body.appendChild(textarea);
    textarea.select();
    try {
      document.execCommand('copy');
      alert('‚úì Log copiado al portapapeles');
    } catch (err) {
      alert('‚úó No se pudo copiar. Por favor, selecciona y copia manualmente.');
    }
    document.body.removeChild(textarea);
  }
})();
</script>
{% endblock %}
